{
    "name": "contracts",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "yarn build && hardhat node",
        "build": "yarn compile && hardhat copy-compiled",
        "compile": "hardhat compile --show-stack-traces",
        "clean": "rm -rf ./dist ./artifacts ./cache ./typechain",
        "clean:test": "rm -rf ./test/lib/tokenInstructions.json",
        "test": "hardhat compile --show-stack-traces && yarn clean:test && hardhat test --show-stack-traces",
        "test:tokens": "hardhat compile --show-stack-traces && hardhat test-tokens --show-stack-traces && yarn clean:test",
        "pre:slither": "ln -s ../node_modules/@openzeppelin",
        "slither": "yarn pre:slither && slither . --filter-paths 'node_modules|@openzeppelin' && yarn post:slither",
        "post:slither": "rm -f @openzeppelin",
        "test:coverage": "hardhat compile --show-stack-traces && hardhat coverage",
        "lint:ts:check": "eslint . --max-warnings=0",
        "lint:contracts:check": "yarn solhint -f table 'contracts/**/*.sol'",
        "lint:check": "yarn lint:contracts:check && yarn lint:ts:check",
        "lint:ts:fix": "eslint --fix .",
        "lint:contracts:fix": "yarn prettier --write 'contracts/**/*.sol'",
        "lint:fix": "yarn lint:contracts:fix && yarn lint:ts:fix",
        "lint": "yarn lint:fix && yarn lint:check"
    },
    "devDependencies": {
        "@atixlabs/hardhat-time-n-mine": "^0.0.5",
        "@nomiclabs/hardhat-ethers": "^2.0.4",
        "@nomiclabs/hardhat-etherscan": "^2.1.3",
        "@nomiclabs/hardhat-waffle": "^2.0.0",
        "@openzeppelin/contracts": "^4.4.2",
        "@typechain/ethers-v5": "^7.0.1",
        "@typechain/hardhat": "^2.3.0",
        "@types/chai": "^4.2.21",
        "@types/fs-extra": "^9.0.13",
        "@types/mocha": "^9.0.0",
        "@types/node": "^12.0.0",
        "@typescript-eslint/eslint-plugin": "^4.29.1",
        "@typescript-eslint/parser": "^4.29.1",
        "chai": "^4.2.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-promise": "^5.1.0",
        "ethereum-waffle": "^3.0.0",
        "ethers": "^5.0.0",
        "fs-extra": "^10.0.0",
        "hardhat": "^2.8.3",
        "hardhat-deploy": "^0.10.4",
        "hardhat-deploy-ethers": "^0.3.0-beta.13",
        "hardhat-gas-reporter": "^1.0.4",
        "prettier": "^2.3.2",
        "prettier-plugin-solidity": "^1.0.0-beta.13",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.19",
        "ts-node": "^10.0.0",
        "typechain": "^5.1.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@walletconnect/web3-provider": "^1.7.3",
        "eth-provider": "^0.10.0",
        "react-app-rewired": "^2.2.1",
        "walletlink": "^2.5.0"
    }
}
